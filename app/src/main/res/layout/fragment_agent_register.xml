<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".FragmentAgentRegister">

    <EditText
        android:id="@+id/agent_register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/agent_register_aadhar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/agent_register_name"
        android:hint="Aadhar Number"
        android:inputType="text" />

    <EditText
        android:id="@+id/agent_register_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/agent_register_aadhar"
        android:hint="Address"
        android:inputType="text" />

    <EditText
        android:id="@+id/agent_register_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/agent_register_address"
        android:hint="Mobile"
        android:inputType="number" />

    <Button
        android:id="@+id/agent_register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/agent_register_mobile"
        android:text="Register Agent" />

</RelativeLayout>