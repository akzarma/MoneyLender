<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".FragmentSelectAccount">


    <ProgressBar
        android:id="@+id/select_account_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:theme="@style/LinearProgress"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/select_account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_account_progress"
        android:fontFamily="@font/roboto_regular"
        android:text="Select Customer Account"
        android:textAllCaps="true" />


    <EditText
        android:id="@+id/search_edit"
        android:hint="Search"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_account_title"/>

    <Spinner
        android:id="@+id/account_spinner"
        android:layout_width="match_parent"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_edit"
        android:layout_marginTop="16dp">

    </Spinner>

    <TextView
        android:id="@+id/no_account_linked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="No Account linked." />

    <!--<ImageButton-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:src="@drawable/ic_chevron_right_black_24dp"-->
    <!--android:background="@drawable/material_button"/>-->


</RelativeLayout>