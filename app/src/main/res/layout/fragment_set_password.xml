<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetPassword">

    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/set_pass_rel_layout"
       android:padding="16dp">

       <android.support.design.widget.TextInputLayout
           android:id="@+id/curr_pass_til"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <android.support.v7.widget.AppCompatEditText
               android:id="@+id/curr_pass_field"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:ems="10"
               android:fontFamily="@font/roboto_regular"
               android:hint="Current Password"
               android:inputType="textVisiblePassword" />
       </android.support.design.widget.TextInputLayout>

       <android.support.design.widget.TextInputLayout
           android:id="@+id/new_pass_til"
           android:layout_below="@id/curr_pass_til"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <android.support.v7.widget.AppCompatEditText
               android:id="@+id/new_pass_field"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:ems="10"
               android:fontFamily="@font/roboto_regular"
               android:hint="New Password"
               android:inputType="textVisiblePassword" />
       </android.support.design.widget.TextInputLayout>

       <android.support.design.widget.TextInputLayout
           android:id="@+id/new_pass1_til"
           android:layout_below="@id/new_pass_til"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <android.support.v7.widget.AppCompatEditText
               android:id="@+id/new_pass1_field"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:ems="10"
               android:fontFamily="@font/roboto_regular"
               android:hint="New Password (Re-enter)"
               android:inputType="textVisiblePassword" />
       </android.support.design.widget.TextInputLayout>
   </RelativeLayout>

</FrameLayout>