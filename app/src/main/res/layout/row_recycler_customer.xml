<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/customer_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/current_card_color"
        app:cardCornerRadius="4dp"
        app:cardElevation="@dimen/cardview_default_elevation">

        <LinearLayout
            android:id="@+id/linearlayout_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">


            <RelativeLayout
                android:id="@+id/relative_layout_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/cust_name_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="loading.."
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
                <!-- Class -->
                <TextView
                    android:id="@+id/cust_id_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="loading.."
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
                <!-- Subject -->


                <View
                    android:background="#BDBDBD"
                    android:layout_marginTop="5dp"
                    android:id="@+id/hori_line"
                    android:layout_below="@id/cust_id_field"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:textColor="#BDBDBD"
                    android:id="@+id/tap_text"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hori_line"
                    android:textSize="12sp"
                    android:text="Tap to view" />

            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>