<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".FragmentDashboard">
    <TextView
        android:id="@+id/dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="15th April 2018"/>
    <LinearLayout
        android:layout_below="@id/dashboard_title"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
app:cardCornerRadius="4dp"
            android:layout_height="160dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_card"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/todays_collection_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:layout_centerHorizontal="true"
android:textColor="#ffffff"
                    android:text="Today's Collection"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/todays_collection_value_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/todays_collection_dashboard"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="8dp"
                    android:paddingTop="30dp"
                    android:textColor="#ffffff"
                    android:text="677"
                    android:textSize="36dp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_height="160dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:background="@drawable/gradient_card_blue"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/monthly_collection_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:text="Monthly Collection"/>

                <TextView
                    android:id="@+id/monthly_collection_value_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/monthly_collection_dashboard"
                    android:text="677"
                    android:textColor="#ffffff"
                    android:paddingTop="30dp"
                    android:textSize="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:layout_height="match_parent" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</RelativeLayout>