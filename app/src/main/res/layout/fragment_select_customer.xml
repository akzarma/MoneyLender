<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".FragmentSelectCustomer">

    <!-- TODO: Update blank fragment layout -->

    <ProgressBar
        android:id="@+id/select_customer_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_password_til"
        android:indeterminate="true"
        android:theme="@style/LinearProgress"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/select_account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_customer_progress"
        android:fontFamily="@font/roboto_regular"
        android:text="Select Customer (Customer ID)"
        android:textAllCaps="true" />

    <Spinner
        android:id="@+id/customer_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_account_title">

    </Spinner>

</RelativeLayout>