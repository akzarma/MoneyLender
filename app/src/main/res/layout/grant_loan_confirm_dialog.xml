<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/grant_loan_dialog_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/grant_loan_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Grant loan?"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/grant_loan_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grant_loan_dialog_title_layout"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_light"
        android:text="Account Number" />

    <TextView
        android:id="@+id/grant_loan_account_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grant_loan_dialog_title_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/grant_loan_account_text"
        android:fontFamily="@font/roboto_medium"
        android:text="" />

    <TextView
        android:id="@+id/grant_loan_customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grant_loan_account_text"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="Customer name" />

    <TextView
        android:id="@+id/grant_loan_customer_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grant_loan_account_value"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/grant_loan_customer_name"
        android:fontFamily="@font/roboto_medium"
        android:text="" />

    <TextView
        android:id="@+id/grant_loan_dis_amount_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grant_loan_customer_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="Disbursement Amount" />

    <TextView
        android:id="@+id/grant_loan_dis_amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grant_loan_customer_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/grant_loan_dis_amount_key"
        android:fontFamily="@font/roboto_medium"
        android:text="" />

    <TextView
        android:id="@+id/grant_loan_file_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grant_loan_dis_amount_key"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="File Amount" />

    <TextView
        android:id="@+id/grant_loan_file_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grant_loan_dis_amount_key"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/grant_loan_file_key"
        android:fontFamily="@font/roboto_medium"
        android:text="" />

    <TextView
        android:id="@+id/grant_loan_type_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grant_loan_file_key"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="Type" />

    <TextView
        android:id="@+id/grant_loan_type_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grant_loan_file_key"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/grant_loan_type_key"
        android:fontFamily="@font/roboto_medium"
        android:text="" />

    <TextView
        android:id="@+id/grant_loan_duration_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grant_loan_type_key"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_light"
        android:text="Duration" />

    <TextView
        android:id="@+id/grant_loan_duration_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grant_loan_type_key"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/grant_loan_duration_key"
        android:fontFamily="@font/roboto_medium"
        android:text="" />


</RelativeLayout>